{
  "name": "videobooker",
  "private": true,
  "version": "0.0.0",
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "dev": "pnpm --filter @videobooker/web dev",
    "dev:api": "pnpm --filter @videobooker/api dev",
    "dev:workers": "pnpm --filter @videobooker/workers dev",
    "lint": "pnpm -r --if-present lint",
    "test": "pnpm -r --if-present test",
    "test:e2e": "pnpm --filter @videobooker/e2e test:e2e",
    "build": "pnpm -r --if-present build",
    "typecheck": "pnpm exec tsc --build tsconfig.json",
    "db:up": "docker compose up mongo -d",
    "db:down": "docker compose down",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "6.21.0",
    "@typescript-eslint/parser": "6.21.0",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-jsx-a11y": "6.8.0",
    "eslint-plugin-react": "7.34.1",
    "eslint-plugin-react-hooks": "4.6.0",
    "husky": "8.0.3",
    "lint-staged": "15.2.2",
    "typescript": "5.4.5"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "pnpm exec eslint --max-warnings=0"
    ]
  }
}
